<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/adapter_livraison_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_livraison_refdoc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:textAlignment="center"
                android:text="code"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adapter_livraison_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/adapter_livraison_refdoc"
                android:layout_weight="20"
                android:gravity="center"
                android:textAlignment="center"
                android:text="data"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adapter_livraison_material"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/adapter_livraison_data"
                android:layout_weight="35"
                android:gravity="left"
                android:textAlignment="gravity"
                android:text="activity name"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adapter_livraison_units"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/adapter_livraison_material"
                android:layout_weight="10"
                android:gravity="center"
                android:textAlignment="center"
                android:text="units"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adapter_livraison_qtd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/adapter_livraison_material"
                android:layout_weight="15"
                android:gravity="center"
                android:text="qtd"
                android:textColor="#000"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>