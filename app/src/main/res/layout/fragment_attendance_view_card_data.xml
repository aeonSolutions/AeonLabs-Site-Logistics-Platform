<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_attendance_view_card_data_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_log_attendance_view_card_data_title"
                android:textAlignment="center"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/fragment_attendance_view_card_data_logo"
                android:layout_width="296dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                app:srcCompat="@drawable/nfc_vector" />

            <TextView
                android:id="@+id/fragment_attendance_view_card_data_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="--" />

            <Button
                android:id="@+id/fragment_attendance_view_card_data_btnClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_close"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>