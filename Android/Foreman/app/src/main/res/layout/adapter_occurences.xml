<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/adapter_ccurences_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_ccurences_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:textAlignment="center"
                android:text="code"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adapter_ccurences_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/adapter_ccurences_code"
                android:layout_weight="20"
                android:gravity="center"
                android:textAlignment="center"
                android:text="data"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adapter_ccurences_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/adapter_ccurences_data"
                android:layout_weight="60"
                android:gravity="left"
                android:text="descricao"
                android:textAlignment="gravity"
                android:textColor="#000"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>