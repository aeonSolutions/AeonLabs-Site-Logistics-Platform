<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/adapter_hardware_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_hardware_designation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:gravity="center"
                android:text="designation"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adapter_hardware_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/adapter_hardware_designation"
                android:layout_weight="20"
                android:gravity="center"
                android:text="estado"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adapter_hardware_worker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/adapter_hardware_state"
                android:layout_weight="35"
                android:gravity="left"
                android:text="worker name"
                android:textAlignment="gravity"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adapter_hardware_requested"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/adapter_hardware_worker"
                android:layout_weight="10"
                android:gravity="center"
                android:text="requested"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>