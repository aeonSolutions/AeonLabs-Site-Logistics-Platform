<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/bordereau_adapter_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/bordereau_adapter_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="code"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bordereau_adapter_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/bordereau_adapter_code"
                android:layout_weight="40"
                android:text="activity name"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bordereau_adapter_units"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/bordereau_adapter_name"
                android:layout_weight="10"
                android:text="Unid."
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bordereau_adapter_qtd_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/bordereau_adapter_units"
                android:layout_weight="10"
                android:text="Total"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bordereau_adapter_qtd_feito"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/bordereau_adapter_qtd_total"
                android:layout_weight="10"
                android:text="Feito"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bordereau_adapter_qtd_falta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/bordereau_adapter_qtd_feito"
                android:layout_weight="10"
                android:text="Falta"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>